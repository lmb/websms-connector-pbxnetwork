<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.lmb.android.websms.pbxnetwork" android:versionName="1.1"
	android:versionCode="1001" android:installLocation="auto">
	<application android:label="@string/app_name" android:icon="@drawable/icon">

		<!--
			This Activity is brought by the WebSMS Connector Plugin API. It shows
			a simple information about this connector when launching it via
			"open" button from android market.
		-->
		<activity android:name="de.ub0r.android.websms.connector.common.InfoActivity"
			android:label="@string/app_name" android:icon="@drawable/icon"
			android:theme="@android:style/Theme.Translucent.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.INFO" />
			</intent-filter>
		</activity>


		<!-- Service doing all the IO. -->
		<service android:name="de.ub0r.android.websms.connector.common.ConnectorService"
			android:exported="false" />

		<activity android:name="Preferences">
			<intent-filter>
				<action android:name="com.lmb.android.websms.pbxnetwork.PREFS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<receiver android:name="com.lmb.android.websms.pbxnetwork.ConnectorPbxnetwork"
			android:enabled="true" android:exported="true">
			<intent-filter>
				<action android:name="com.lmb.android.websms.pbxnetwork.RUN_BOOTSTRAP" />
				<action android:name="com.lmb.android.websms.pbxnetwork.RUN_UPDATE" />
				<action android:name="com.lmb.android.websms.pbxnetwork.RUN_SEND" />
				<action android:name="de.ub0r.android.websms.connector.UPDATE" />
			</intent-filter>
		</receiver>
	</application>
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8" />
	<supports-screens android:smallScreens="true"
		android:normalScreens="true" android:largeScreens="true"
		android:anyDensity="true" />
	<uses-feature android:name="android.hardware.touchscreen"
		android:required="false" />
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- WAKE_LOCK needed to make sure, sms are send even if user sends device to sleep. -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest> 
